                 <button class="btn btn-info btn-warning"><%= products[i].price %>â‚¬</button>
             </figcaption>
                
                      
           </figure> 
           </a>
        </div>   
                            
       <% } %>                       
        
    </div>
    
    
    
    
    
    
</div>